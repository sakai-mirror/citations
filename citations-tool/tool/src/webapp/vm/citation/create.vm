#macro(getFieldValue $field $currentValue $index)
	#if("shorttext" == "$!{field.valueType}")
		<input name="$!{field.identifier}$index" id="$!{field.identifier}$index" value="$!{xilator.escapeHtml( $currentValue )}" type="text" size="50" />
	#elseif("number" == "$!{field.valueType}")
		<input name="$!{field.identifier}$index" id="$!{field.identifier}$index" value="$!{xilator.escapeHtml( $currentValue )}" type="text" size="20" />
	#elseif("longtext" == "$!{field.valueType}")
		<textarea name="$!{field.identifier}$index" id="$!{field.identifier}$index" cols="50" rows="4">$!{currentValue}</textarea>
	#elseif("date" == "$!{field.valueType}")
		<input name="$!{field.identifier}$index" id="$!{field.identifier}$index" value="$!{xilator.escapeHtml( $currentValue )}" type="text" size="20" />
	#end	
#end
#macro(getMultivalued $field $values $count)
	<div id="div_$!{field.identifier}">
		<table>
			#if($multiValues && ($multiValues.size() > 0))
				#set($index = 0)
				#foreach($value in $values)
					<tr>
						<td>
							#getFieldValue($!field "$!value" $!index)
						</td>
					</tr>
					#set($index = $index + 1)
				#end
			#else
				#set($index = 1)
				<tr>
					<td>
						#getFieldValue($field "" "0")
					</td>
				</tr>
			#end
			<tr>
				<td>
					<a href="#" onclick="javascript:getAnother('${DEFAULT_TEMPLATE.identifier}', ${count});">Add another</a>
				</td>
			</tr>
		</table>
	</div>
	<input type="hidden" name="$!{field.identifier}_count" id="$!{field.identifier}_count" value="$index" />
#end

#set($default = "")
#if($!DEFAULT_TEMPLATE)#set($default = "$!DEFAULT_TEMPLATE.identifier")#end

<script type="text/javascript" src="#libraryLink('js/jquery-1.1.2.js')">
</script>
